        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10">

            <TextView
                style="@style/text"
                android:text="Inventory name Inventory name Inventory name" />
        </LinearLayout>
    </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
