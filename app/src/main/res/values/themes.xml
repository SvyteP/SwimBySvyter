<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SwimBySvyter" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item> <!--Не используется-->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:navigationBarColor">@color/purple_500</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/gray_700</item>
        <item name="colorEditBackground">@color/purple_100</item>
        <item name="colorNoAccent">@color/gray_300</item>
        <item name="colorEditorTxt">@color/gray_700</item>


        <item name="switchBack">@color/gray_100</item>
        <item name="switchBtn">@color/gray_300</item>

    </style>

    <style name="Theme.SwimBySvyter.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SwimBySvyter.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SwimBySvyter.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>