<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--All-->
    <style name="textHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textSize">@dimen/headers</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/btn_txt_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/btn_txt_small_size</item>
    </style>

    <style name="text.onPrimary">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="text.accent">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="text.noAccent">
        <item name="android:textColor">?attr/colorNoAccent</item>
    </style>


    <style name="btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/btn_width</item>
        <item name="android:background">@drawable/ripple_btn</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
    </style>


    <style name="bubbleBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/item_bubble_box</item>
    </style>

    <style name="bubbleBox.btn">
        <item name="android:background">@drawable/ripple_bubble_box</item>
    </style>

    <style name="backArrow">
        <item name="android:layout_width">@dimen/ic_medium_size</item>
        <item name="android:layout_height">@dimen/ic_medium_size</item>
        <item name="android:src">@drawable/ic_right_arrow</item>
        <item name="android:clickable">false</item>
        <item name="android:rotation">180</item>
        <item name="android:tint">?attr/colorAccent</item>
    </style>

    <style name="dialogStyle" parent="Theme.SwimBySvyter">
        <item name="android:windowBackground">@drawable/edit_field_active</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!--Sign In / Sign Up-->
    <style name="colorEditor" parent="Theme.SwimBySvyter">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/btn_width</item>
        <item name="android:paddingTop">@dimen/medium_indent_from_box</item>
        <item name="android:background">@drawable/edit_field_with_color_selector</item>"
        <item name="android:paddingVertical">@dimen/small_indent_from_box</item>
        <item name="android:paddingLeft">@dimen/medium_indent_text_in_box</item>
        <item name="android:layout_marginTop">@dimen/medium_indent_from_box</item>
        <item name="android:textColor">?attr/colorEditorTxt</item>
        <item name="android:textSize">@dimen/info_txt</item>
    </style>


    <!--Profile's-->
    <style name="textQuestioner">
        <item name="android:textColor">?attr/colorNoAccent</item>
        <item name="android:textSize">@dimen/info_txt</item>
    </style>

    <style name="textQuestioner.infoBox">
        <item name="android:background">@drawable/info_gray_block</item>
        <item name="android:padding">@dimen/medium_indent_text_in_box</item>
    </style>

    <style name="textQuestioner.boxHeader">
        <item name="android:paddingVertical">@dimen/small_indent_from_box</item>
        <item name="android:paddingLeft">@dimen/small_indent_from_box</item>
    </style>


    <style name="textHeader.profile">
        <item name="android:textAlignment">center</item>
    </style>

    <!--EditDialog-->
    <style name="textQuestioner.editor">
        <item name="android:textColor">?attr/colorEditorTxt</item>
        <item name="android:textSize">@dimen/info_txt</item>
    </style>

    <style name="textQuestioner.editor.infoBox">
        <item name="android:background">@drawable/edit_field_active</item>
        <item name="android:padding">@dimen/medium_indent_text_in_box</item>
    </style>

    <style name="textQuestioner.editor.boxHeader">
        <item name="android:paddingVertical">@dimen/small_indent_from_box</item>
        <item name="android:paddingLeft">@dimen/small_indent_from_box</item>
    </style>

    <style name="Widget.Theme.SwimBySvyter.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>


</resources>